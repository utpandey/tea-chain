{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
        "exclude": [
            "config/**/*.js",
            "*.json",
            "**/*.json",
            "node_modules/**/*.ts",
            "coverage/lcov-report/*.js"
        ]
    },
    "rules": {
        "ordered-imports": [false],
        "object-literal-sort-keys": [false],
        "no-shadowed-variable": true,
        "jsx-no-lambda": false,
        "no-console": false
    },
    "jsRules": {
        "no-console": false
    }

}